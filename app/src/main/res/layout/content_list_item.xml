<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.testyoutube.data.videolistitem.ItemVideo" />
        <variable
            name="current"
            type="Long" />
    </data>

<LinearLayout
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/horisontal_item_margin_start"
    android:layout_marginTop="@dimen/horisontal_item_margin_top"
    tools:ignore="UselessLeaf">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/channels_image_size"
        app:cardCornerRadius="@dimen/image_corner_size">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:loadImage='@{item}'
        tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/textChannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@{item.channelTitle}" />

    <TextView
        android:id="@+id/textTytle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@{item.title}" />
</LinearLayout>

</layout>