<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.testyoutube.data.database.entity.ItemVideo" />
        <variable
            name="current"
            type="Long" />
    </data>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin"
        android:layout_marginStart="@dimen/item_margin"
        android:layout_marginBottom="@dimen/item_margin"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/image_corner_size">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:loadImage='@{item}'
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textChannelTytle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@{item.channelTitle}"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/vertical_item_channel_text_size" />

        <TextView
            android:id="@+id/textTytle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@{item.title}"
            android:textAllCaps="true"
            android:textColor="@color/item_tytle_color"
            android:textSize="@dimen/vertical_item_tytle_text_size" />
    </LinearLayout>

</layout>